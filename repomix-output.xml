    def __init__(self):
        self.event = threading.Event()
        self.thread = threading.Thread(target=self._listener, daemon=True)

        self.position_goal = None
        self.state = 0

        self.position = 0
        self.speed = 0  # Maximum is 1050dps
        self.power = 0  # Maximum is 1050dps

        self.set_limits()

