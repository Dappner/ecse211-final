        else:
            self.power_limit = self.limit(power, 0, 100)
        if speed == 0:
            self.speed_limit = self.MAX_SPEED
        else:
            self.speed_limit = self.limit(speed, 0, self.MAX_SPEED)

    def set_power(self, power):
