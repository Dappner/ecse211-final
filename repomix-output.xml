        self.speed = self.power / 100 * self.MAX_SPEED

    def speed_to_power(self):
        self.power = self.speed / self.MAX_SPEED * 100

    def set_limits(self, power=0, speed=0):
        power = abs(power)
        speed = abs(speed)
        if power == 0:
